<header class="main-header">
    <div class="main-header-box">
        <a class="header-avatar" href="/" title='<%= config.author %>'>
            <%- image_tag(theme.avatar.img,{alt:'logo头像',class:'img-responsive center-block'}) %>
        </a>
        <div class="branding">
            <% if(theme.branding){ %>
            <h2>
                <%= theme.branding %>
            </h2>
            <% } else { %>
            <%- image_tag('img/branding.png',{alt:'Snippet 博客主题',class:'img-responsive center-block'}) %>
            <% } %>
        </div>
    </div>
</header>